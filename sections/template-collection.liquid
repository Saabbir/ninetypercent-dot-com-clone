<div class="c-collection-page u-py-32">
  <div class="l-wrap">
    <header class="u-d-f u-ai-center u-jc-sb u-gap-16 u-mb-16">
      <h2>{{ collection.title }}</h2>
      <div><a href="{{ routes.collections_url }}">Go back to all collections</a></div>
    </header>

    {% paginate collection.products by section.settings.products_per_page %}
      <div class="c-product-cards">
        {% for product in collection.products %}
          {% render 'product-card', product: product %}
        {% else %}
          <p>No products available in this collection.</p>
        {% endfor %}
      </div>

      {% render 'pagination', paginate: paginate %}
    {% endpaginate %}
  </div>
</div>

{% schema %}
{
  "name": "Template Collection",
  "settings": [
    {
      "id": "products_per_page",
      "label": "Products per page",
      "type": "range",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 6
    }
  ]
}
{% endschema %}
