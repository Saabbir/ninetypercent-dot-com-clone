<div class="c-card u-position-relative">
  {% comment %} <span class="c-object-type">Article</span> {% endcomment %}
  <a href="{{ article.url }}" class="u-d-flex">
    {% if article.image %}
      {{ article.image | image_url: width: 400 | image_tag: class: 'c-card__img' }}
    {% else %}
      {{ 'image' | placeholder_svg_tag: 'c-card__img' }}
    {% endif %}
  </a>
  <div class="c-card__copy">
    <h2 class="c-card__title">{{ article.title | link_to: article.url }}</h2>
    <p class="u-mt-16">
      {% if article.excerpt.size > 0 %}
        {{ article.excerpt | strip_html | truncatewords: 15 }}
      {% else %}
        {{ article.content | strip_html | truncatewords: 15 }}
      {% endif %}
    </p>
    <a class="u-mt-32 u-link" href="{{ article.url }}">
      {% if section.settings.read_more_label != null %}
        {{- section.settings.read_more_label }}
      {% else %}
        View article
      {% endif %}
      {% render 'icon-arrow-right' -%}
    </a>
  </div>
</div>
